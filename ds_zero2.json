{
    "bf16": {
        "enabled": true
    },
    "fp16": {
        "enabled": false
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 0.00002,
            "betas": [
                0.9,
                0.95
            ],
            "weight_decay": 0.01,
            "eps": 1e-8
        }
    },
    "train_micro_batch_size_per_gpu": 4,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    "zero_optimization": {
        "stage": 2,
        "overlap_comm": false,
        "contiguous_gradients": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "allgather_bucket_size": 2e8,
        "round_robin_gradients": false
    }
}